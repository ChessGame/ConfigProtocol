<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@id/shikigami_icon"
        android:layout_width="@dimen/shikigami_size"
        android:layout_height="@dimen/shikigami_size"
        android:contentDescription="@string/shikigami_desc"
        android:src="@drawable/pic_20160920150850532" />

    <TextView
        android:id="@id/shikigami_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:text="@string/shikigami_name"
        android:textSize="12sp" />
</LinearLayout>